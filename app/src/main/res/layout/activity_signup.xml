<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".Signup">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:text="MedCare"
        android:textSize="25dp"
        android:textStyle="bold"
        android:paddingTop="50dp"
        android:textColor="#000000"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to the portal"
        android:textAlignment="center"
        android:textSize="18dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/googlebtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00D6D3D3"
                android:contentDescription="phone Icon"
                android:onClick="onImageButtonClick"
                android:src="@drawable/icons8google48" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/imageButton1"
                android:text="Google"
                android:textColor="#000000"
                android:textSize="17dp" />

        </RelativeLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:id="@+id/phnbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00D6D3D3"
                android:contentDescription="phone Icon"
                android:onClick="onImageButtonClick"
                android:src="@drawable/icons8phone48" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/imageButton"
                android:text="Phone number"
                android:textColor="#000000"
                android:textSize="13dp" />

        </RelativeLayout>



    </LinearLayout>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="0.07"
        android:background="@drawable/custom_edittext"
        android:hint="Name"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="0.07"
        android:background="@drawable/custom_edittext"
        android:hint="Email"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="0.07"
        android:background="@drawable/custom_edittext"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp" />

    <CheckBox
        android:id="@+id/checkboxAgree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:layout_gravity="center"
        android:text="I agree with the terms and conditions"
        android:textColor="#000000" />

    <Button
        android:id="@+id/signupbtn"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.07"
        android:background="@drawable/custom_edittext"
        android:text="Signup"
        android:textSize="19dp" />


    <TextView
        android:id="@+id/lgnin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.365"
        android:gravity="center_vertical"
        android:text="Already have an account? Sign in"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="18dp"
        tools:ignore="RtlCompat" />



</LinearLayout>